**#Linux Setup**
----------
# Programs to install (PacMan)
sudo pacman -Syu && sudo pacman -S weechat vim pymol obs-studio gnuplot tmux git python-pip yaourt python-lxml python-numpy python-biopython python-scipy python-matplotlib python-pandas python-beautifulsoup4 python-scikit-learn python-tensorflow b43-firmware && sudo pip install keras && yaourt -S dssp
# Weechat setup
/set buflist.look.enabled off
/server add freenode irc.freenode.net
/server add twitch irc.chat.twitch.tv
/set irc.server.freenode.addresses "chat.freenode.net/7000"
/set irc.server.freenode.ssl on
/set irc.server.twitch.autojoin "#acresearch"
/set irc.server.freenode.sasl_username NICKNAME
/set irc.server.freenode.sasl_password PASSWORD
/set irc.server.twitch.username NICKNAME
/set irc.server.twitch.password oauth:***** [http://www.twitchapps.com/tmi/]
# VIM Setup
printf ':set shiftwidth=8 noexpandtab\n:set softtabstop=8 noexpandtab\n:set list\n:set listchars=tab:»·,trail:·,extends:>,precedes:<,nbsp:+\n:syntax enable\n:set nowrap' >> .vimrc.
----------
# Programs to install (Raspberry Pi)
passwd
sudo sed -i 's/XKBLAYOUT="gb"/XKBLAYOUT="us"/g' /etc/default/keyboard && sudo sed -i 's/raspberrypi/AraspPI/g' /etc/hostname && sudo sed -i 's/^exit 0/setterm -blank 0\nexit 0/g' /etc/rc.local && sudo apt update && sudo apt full-upgrade && sudo apt install weechat vim tmux git python3-pip lynx htop dssp && sudo pip3 install biopython bs4 scikit-learn scipy numpy pandas tensorflow keras
# Weechat setup
/server add freenode irc.freenode.net
/set irc.server.freenode.autoconnect on
/set irc.server.freenode.addresses "chat.freenode.net/7000"
/set irc.server.freenode.ssl on
/set irc.server.freenode.nicks "AraspPI"
/set irc.server.freenode.sasl_username NICKNAME
/set irc.server.freenode.sasl_password PASSWORD
